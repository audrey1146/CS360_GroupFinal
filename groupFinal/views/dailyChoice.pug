    form(method='POST' action='/dailyChoice/new/add' + id)
      button(class='go_button') Go
        script.
          let image_path = undefined;
          let name = undefined;
          let toppingID = undefined;
          $(document).ready(function() {
            $('#pizzaTable').on('click', '.table_button', function() {
              let cell = $(this).closest('td');
              let name = cell.text();
              for (let k = 0; k < length; k++) {
                if (name == arrNames[k]) {
                  image_path = arrPaths[k];
                  toppingID = arrIDs[k];
                  break;
                }
              }
              console.log(name + '\n' + image_path + '\n' + toppingID + '\n' + 'User ID: ' + '#{id}');
            });
          });
          
