    link(rel='stylesheet' type='text/css' href='../public/stylesheets/style.css')

  body(class='green_background')
    h1
      div(class='row row-no-padding')
        div(id='header')
          div(class='center')
            h1(class='scalingHeader') Slice of Pacific
      div(class='row m-5')
      div(class='row m-5')
      div(class='row m-5')

    div(class='container v-100 d-flex align-items-center justify-content-center')
      div(class='row row-no-padding')
        div(class='col-xs-3 col-no-padding')
        div(class='col-xs-6 col-no-padding')
          div(class='content_area text-center')
            form
              a(href='/login' class='scalingButtons btn btn-success') Sign In!
              div(class='row m-3')
              img(class='.img-fluid' src="/public/images/pizza.png")
              div(class='row m-3')
              a(href='/login' class='scalingButtons btn btn-success') Don't have an account?
        div(class='col-xs-3 col-no-padding')

    script(src='https://code.jquery.com/jquery-3.5.1.slim.min.js' integrity='sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj' crossorigin='anonymous')
